{
  "manifest_version": 3,
  "name": "PEP-Web Bias Analyzer",
  "version": "1.0.0",
  "description": "Select psychoanalytic text on PEP-Web and analyze it for ideological biases using Claude AI â€” through lenses of Critical, Queer, Trans, Postcolonial, and related theories.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://www.pep-web.org/*",
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.pep-web.org/*"
      ],
      "js": [
        "content_script.js"
      ],
      "css": [
        "content_style.css"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}